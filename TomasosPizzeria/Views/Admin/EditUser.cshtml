@model TomasosPizzeria.ViewModels.UpdateUserViewModel 
<div class="outer-edit-container">
    <div class="edit-container">
        <form asp-controller="Admin" asp-action="UpdateUser" method="post">

            <div class="row">
                <label asp-for="Email"></label>
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="row">
                <label asp-for="Gatuadress"></label>
                <input type="text" asp-for="Gatuadress" />
                <span asp-validation-for="Gatuadress"></span>
            </div>

            <div class="row">
                <label asp-for="Namn"></label>
                <input type="text" asp-for="Namn" />
                <span asp-validation-for="Namn"></span>
            </div>

            <div class="row">
                <label asp-for="Postnr"></label>
                <input type="text" asp-for="Postnr" />
                <span asp-validation-for="Postnr"></span>
            </div>

            <div class="row">
                <label asp-for="Postort"></label>
                <input type="text" asp-for="Postort" />
                <span asp-validation-for="Postort"></span>
            </div>

            <div class="row">
                <label asp-for="Phone"></label>
                <input type="text" asp-for="Phone" />
                <span asp-validation-for="Phone"></span>
            </div>

            <div class="row">
                <input type="submit" class="btn btn-outline-success" value="Save" />
            </div>

            <div class="row">
                <p>@TempData["save"]</p>
            </div>
        </form>
    </div>
</div>