@model TomasosPizzeria.ViewModels.MainCoursesViewModel

<div class="basket">
    <table class="table-hover">
        <thead>
            <tr>
                <th>Ingredients</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in Model.Ingredients)
            {
                <tr>
                    <td>@ingredient.ProduktNamn</td>
                    <td>
                        <a asp-controller="Admin"
                           asp-action="EditIngredient"
                           asp-route-id="@ingredient.ProduktId"
                           data-ajax="true"
                           data-ajax-method="GET"
                           data-ajax-mode="replace"
                           data-ajax-update="#EditIngredient">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Admin"
                           asp-action="RemoveIngredient"
                           asp-route-id="@ingredient.ProduktId">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>

                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p class="text-center">@TempData["error"]</p>
    <p class="text-center">@TempData["save"]</p>
</div>

<div id="EditIngredient">

</div>
